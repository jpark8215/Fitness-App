<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="workoutField" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddWorkoutController">

    <Button fx:id="saveButton" layoutX="318.0" layoutY="96.0" onAction="#saveButtonHandler" text="Save"/>
    <TextField fx:id="workoutTextField" layoutX="42.0" layoutY="92.0" prefHeight="32.0" prefWidth="215.0"
               promptText="Workout"/>
    <TableView fx:id="workoutTable" layoutX="42.0" layoutY="172.0" prefHeight="239.0" prefWidth="317.0">
        <columns>
            <TableColumn fx:id="indexCol" prefWidth="56.0" text="Index"/>
            <TableColumn fx:id="workoutNameCol" prefWidth="195.0" text="Workout"/>
            <TableColumn fx:id="calorieCol" minWidth="0.0" prefWidth="64.0" text="Calorie"/>
        </columns>
    </TableView>
    <Button fx:id="mainButton" layoutX="58.0" layoutY="478.0" mnemonicParsing="false" onAction="#mainButtonHandler"
            text="To Main"/>
</AnchorPane>
